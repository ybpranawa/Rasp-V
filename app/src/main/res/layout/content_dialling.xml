<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_dialling"
    tools:context="com.rakide.rasp_v.DiallingActivity"
    android:orientation="vertical"
    android:background="#26A69A">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tvDialling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dialling..."
            android:textSize="45sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="4"/>

        <TextView
            android:id="@+id/tvDiallingUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="fanyagriansyah"
            android:textColor="#B3E5FC"
            android:textSize="40sp"
            android:gravity="center|top"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#B3E5FC"
            android:textSize="40sp"
            android:gravity="center|top"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="2"
        android:gravity="center">
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/btnEndCallDialling"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@drawable/user"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
