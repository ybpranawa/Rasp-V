<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_dialling"
    tools:context="com.rakide.rasp_v.DiallingActivity"
    android:orientation="vertical"
    android:background="#3F51B5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tvDialling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dialling..."
            android:textSize="45sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:gravity="center|bottom"
            android:layout_weight="8"/>

        <TextView
            android:id="@+id/tvDiallingUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="fanyagriansyah"
            android:textColor="#fff"
            android:textSize="40sp"
            android:gravity="center|bottom"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center">
        <Button
            android:id="@+id/btnEndCallDialling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End"
            android:textColor="#FFF"
            android:background="#F00"/>
    </LinearLayout>
</LinearLayout>
